<h1>Products</h1>

<%= link_to 'Add Product', :new_product %>

<table id="products">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
      <th></th>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= link_to "Delete", product, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
